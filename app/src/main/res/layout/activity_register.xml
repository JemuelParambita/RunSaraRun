<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.RegisterActivity"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:src="@drawable/paa_logo_b"/>
            <TextView
                android:id="@+id/createAccountText"
                android:textColor="#006400"
                android:textAlignment="center"
                android:layout_gravity="center|center_vertical|center|center_horizontal"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:layout_weight="1"
                android:text="CREATE AN ACCOUNT"/>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >

            <LinearLayout

                android:id="@+id/createAccountLayout"
                android:layout_gravity="bottom"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_alignParentBottom="true"
                android:fitsSystemWindows="true"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textColor="#797979"
                    android:textColorHint="#494949"
                    >
                    <EditText
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="#797979"
                        android:textColorHint="#494949"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textColor="#797979"
                    android:textColorHint="#494949"
                    >
                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="#797979"
                        android:textColorHint="#494949"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textColor="#797979"
                    android:textColorHint="#494949"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="#797979"
                        android:textColorHint="#494949" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textColor="#797979"
                    android:textColorHint="#494949"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/confirmpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="#797979"
                        android:textColorHint="#494949" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:textColor="#006400"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center_vertical|center|center_horizontal"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:text="@string/create_account_terms"/>

                    <Button
                        android:id="@+id/signupButton"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATE ACCOUNT"
                        android:textSize="20dp"
                        android:layout_margin="20dp"

                        />

                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center_vertical|center|center_horizontal"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:text="Already have a PAA account?"/>

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/login"
                        android:text="@string/login_account"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center_vertical|center|center_horizontal"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>